<html lang="en-US">
<head>
    <title>Survey Analysis</title>
    <style>
       body {
  background-color: #f2f2f2;
  font-family: Arial, sans-serif;
  text-align: center;
  padding: 20px;
}

/* Style the h1 element */
h1 {
  font-size: 36px;
  margin-bottom: 20px;
}

/* Style the h2 elements */
h2 {
  font-size: 24px;
  margin: 40px auto 20px;
  max-width: 600px;
  padding: 10px;
  background-color: #fff;
  border-radius: 10px;
  box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.2);
}

/* Style the ul elements */
ul {
  list-style: none;
  padding: 0;
  margin: 0;
  max-width: 600px;
  margin: 0 auto;
}

/* Style the li elements */
li {
  font-size: 18px;
  margin: 10px 0;
  padding: 10px;
  background-color: #fff;
  border-radius: 10px;
  box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.2);
}

    </style>
</head>

<body>
    <div class="card">
        <h1>Survey analysis</h1>
    </div>
    
    <div class="card">
        <h2>Colors</h2>
        <ul>
        <% for (var i=0; i<results[0].length; i++){ %>
            <li><%= results[0][i].color %> :  <%= results[0][i].count %></li>
        <% } %>    
        </ul>
    </div>

    <div class="card">
        <h2>Fruits</h2>
        <ul>
        <% for (var i=0; i<results[1].length; i++){ %>
            <li><%= results[1][i].fruit %> :  <%= results[1][i].count %></li>
        <% } %>    
        </ul>
    </div>

    <div class="card">
        <h2>Animals</h2>
        <ul>
        <% for (var i=0; i<results[2].length; i++){ %>
            <li><%= results[2][i].animal %> :  <%= results[2][i].count %></li>
        <% } %>
        </ul>
    </div>

    <div class="card">
        <h2>Laundry</h2>
        <ul>
        <% for (var i=0; i<results[3].length; i++){ %>
            <li><%= results[3][i].laundry %> :  <%= results[3][i].count %></li>
        <% } %>    
        </ul>
    </div>

    <div class="card">
        <h2>Fruits</h2>
        <ul>
        <% for (var i=0; i<results[4].length; i++){ %>
            <li><%= results[4][i].vegetables %> :  <%= results[4][i].count %></li>
        <% } %>    
        </ul>
    </div>

    <div class="card">
        <h2>Workout</h2>
        <ul>
        <% for (var i=0; i<results[5].length; i++){ %>
            <li><%= results[5][i].workout %> :  <%= results[5][i].count %></li>
        <% } %>     
        </ul>
    </div>
</body>
</html>
